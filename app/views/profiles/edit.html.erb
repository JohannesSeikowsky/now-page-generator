<!-- header -->
<div class="simple_header">
  <%= link_to "Profile", user_profile_path(@user.url) %> |
  <%= link_to "Logout", logout_path %>
</div>

<div class="simple_container">
  <h2> Editing Nowpage </h2>
  <%= form_for @profile, url: user_profile_update_path do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title, plaeholder: "title" %>
    <h4>Subtitle</h4>
    <%= f.text_field :subtitle, plaeholder: "sutitle" %>
    <h4>Content</h4>
    <%= f.text_field :content, plaeholder: "content" %>
    <h4>Contact Text</h4>
    <%= f.text_field :contact_text, plaeholder: "contact" %>
    <%= f.submit "Done." %>
  <% end %>
</div>